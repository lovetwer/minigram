/* miniprogram/pages/music/music.wxss */

.container{
  padding:20rpx;
  box-sizing: border-box;
}
.container .item{
  display: flex;
  align-items: center;
}
.container .item .img{
  width:160rpx;
  height:160rpx;
  display: block;
  margin-right: 20rpx;
}

.container .item .info{
  height: 60%;
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
  color: #aaa;
}

.container .item .info>view:first-child{
  font-size: 32rpx;
  margin-bottom: 20rpx;
  color: #000;
}