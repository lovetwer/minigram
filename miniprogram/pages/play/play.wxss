.micImg{
  width: 100%;
  margin-top: 5%;
  display: flex;
  /*设置显示样式**/
  align-items: center;
  /**子view垂直居中*/
  vertical-align: center;
  /**垂直居中*/
  justify-content: center;
}
.playPic {
  margin-top: 40rpx;
  border-radius:5%;
  position: relative;
  width: 240px;
  height: 200px;
}
.lrc-wrapper{
  margin-top: 52rpx;
  font-weight: 50;
  color: #AAAAAA;
  width: 100%;
  height:300rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 50rpx
}
.lrc.active{
  color: white;
  font-weight: 100;
  font-size: 30rpx;

}
.playBut{
  border: 3px solid white;
  border-style: solid;
  border-width: 2px;
  height: 50px;
  width: 50px;
  position: absolute;
  z-index: 1;
  border-radius: 50%;

}
.triangle-right {
  border-top: 20px solid transparent;
  border-left: 32px solid white;
  border-bottom: 20px solid transparent;
  position: absolute;
  z-index: 1;
  margin-left: 1%;

  
}
.paused{
  border:3px solid white;
  border-style: solid;
  height: 50rpx;
  position: absolute;
  z-index: 1;
  margin-left: -1%;

  
}
.paused2{
  border:3px solid white;
  border-style: solid;
  height: 50rpx;
  position: absolute;
  z-index: 1;
  margin-left: 2%;


}

