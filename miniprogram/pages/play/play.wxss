.bgpic{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  filter: blur(100rpx);
  z-index: -999;
}
.countpic{
  width: 25px;
  height: 25px;
}
.count{
  margin-top: 10rpx
}

