<!--miniprogram/pages/paly/play.wxml-->
<view class="all">
	<view class="head">
		<view class="head1"><text class="songName">{{song.name}}</text></view>
		<view class="head2"><text class="singer">{{song.singer}}</text></view>
	</view>
	<view class="micImg">
		<image src="{{song.micPic}}" data-src='{{song.url}}' class="playPic" bindtap="playing" />
	</view>
	
	<view class="center">
		<image src="http://www.yunmic.club/img/xiazai.png" class="down" bindtap="dow" data-file='{{song.name}}'/>
		<image src="http://www.yunmic.club/img/myheart.png" class="love" bindtap="collect" data-name='{{song.name}}' wx:if="{{show}}"/>
		<image src="http://www.yunmic.club/img/loved.png" class="loved" bindtap="collect" data-name='{{song.name}}' wx:else/>
	</view>
</view>