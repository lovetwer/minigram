<!--miniprogram/pages/putSong/putSong.wxml-->
<view class="all">
<view class="head">
	<input class="search" type="text" placeholder="🔍  音乐/视频/用户" bindtap="click">
    </input>
</view>
<view wx:for="{{song}}"wx:for-item="song"  class="body" >
<block>
<view bindtap="toPlay"  data-name="{{song.name}}"  data-singer="{{song.singer}}">
<image src="{{hp+song.micPic}}" class="micPic" />
<text class="songName" >{{song.name}}</text>
<text class="singer" >{{song.singer}}</text>
</view>
</block>
</view>
</view>

